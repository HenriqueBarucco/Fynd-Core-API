  "info": {
    "title": "Fynd Core API",
    "description": "HTTP endpoints for the Fynd Core platform.",
    "version": "1.0.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "schemas": {
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Human readable name for the user."
          },
          "phone": {
            "type": "string",
            "description": "Primary phone number for the user."
          }
        },
        "required": [
          "name",
          "phone"
        ]
      },
      "UserResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "User identifier (UUID v8).",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "description": "Current user name."
          },
          "phone": {
            "type": "string",
            "description": "User phone number."
          },
          "createdAt": {
            "type": "string",
            "description": "Creation timestamp in ISO 8601."
          },
          "updatedAt": {
            "type": "string",
            "description": "Last update timestamp in ISO 8601."
          }
        },
        "required": [
          "id",
          "name",
          "phone",
          "createdAt",
          "updatedAt"
        ]
      },
      "UpdateUserDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Updated name for the user."
          },
          "phone": {
            "type": "string",
            "description": "Updated phone number for the user."
          }
        }
      },
      "CreateGroupDto": {
        "type": "object",
        "properties": {
          "externalId": {
            "type": "string",
            "description": "External identifier coming from upstream systems."
          },
          "description": {
            "type": "string",
            "description": "Human readable description of the group."
          }
        },
        "required": [
          "externalId",
          "description"
        ]
      },
      "GroupResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Group identifier (UUID v8).",
            "format": "uuid"
          },
          "externalId": {
            "type": "string",
            "description": "External identifier associated to the group."
          },
          "description": {
            "type": "string",
            "description": "Readable description of the group."
          },
          "createdAt": {
            "type": "string",
            "description": "Creation timestamp in ISO 8601."
          },
          "updatedAt": {
            "type": "string",
            "description": "Last update timestamp in ISO 8601."
          }
        },
        "required": [
          "id",
          "externalId",
          "description",
          "createdAt",
          "updatedAt"
        ]
      },
      "UpdateGroupDto": {
        "type": "object",
        "properties": {
          "externalId": {
            "type": "string",
            "description": "External identifier override."
          },
          "description": {
            "type": "string",
            "description": "Updated group description."
          }
        }
      }
    }
  }
}