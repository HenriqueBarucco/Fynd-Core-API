{
  "openapi": "3.0.0",
  "paths": {
    "/v1/users": {
      "post": {
        "description": "Creates a user with a server-generated UUID v8 identifier.",
        "operationId": "UserController_create",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid payload."
          }
        },
        "summary": "Create user",
        "tags": [
          "Users"
        ]
      },
      "get": {
        "description": "Returns all users ordered by creation date.",
        "operationId": "UserController_findAll",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Users retrieved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserResponseDto"
                  }
                }
              }
            }
          }
        },
        "summary": "List users",
        "tags": [
          "Users"
        ]
      }
    },
    "/v1/users/search/by-label": {
      "get": {
        "description": "Runs an embedding search on the stored tastes and returns users ranked by similarity to the provided label.",
        "operationId": "UserController_searchByLabel",
        "parameters": [
          {
            "name": "label",
            "required": true,
            "in": "query",
            "description": "Taste label used as the search seed.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "scoreThreshold",
            "required": false,
            "in": "query",
            "description": "Minimum similarity score between 0 and 1.",
            "schema": {
              "minimum": 0,
              "maximum": 1,
              "default": 0.1,
              "type": "number"
            }
          },
          {
            "name": "limit",
            "required": false,
            "in": "query",
            "description": "Maximum number of unique users to return.",
            "schema": {
              "minimum": 1,
              "maximum": 100,
              "default": 20,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Matching users retrieved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserTasteSearchResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameters."
          }
        },
        "summary": "Search users by taste label",
        "tags": [
          "Users"
        ]
      }
    },
    "/v1/users/{id}": {
      "get": {
        "description": "Retrieves a user by its UUID v8 identifier.",
        "operationId": "UserController_findOne",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "User not found."
          }
        },
        "summary": "Get user",
        "tags": [
          "Users"
        ]
      },
      "patch": {
        "description": "Partially updates user attributes.",
        "operationId": "UserController_update",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUserDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid payload."
          },
          "404": {
            "description": "User not found."
          }
        },
        "summary": "Update user",
        "tags": [
          "Users"
        ]
      },
      "delete": {
        "description": "Removes a user permanently.",
        "operationId": "UserController_delete",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "User deleted."
          },
          "404": {
            "description": "User not found."
          }
        },
        "summary": "Delete user",
        "tags": [
          "Users"
        ]
      }
    },
    "/v1/users/{id}/tastes": {
      "get": {
        "description": "Returns all tastes added by the given user.",
        "operationId": "UserController_listTastes",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User tastes retrieved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserTasteResponseDto"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found."
          }
        },
        "summary": "List user tastes",
        "tags": [
          "Users"
        ]
      },
      "post": {
        "description": "Generates an embedding for the provided taste and stores it for similarity searches.",
        "operationId": "UserController_addTaste",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddUserTasteDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Taste stored and indexed successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserTasteResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid payload."
          },
          "404": {
            "description": "User not found."
          }
        },
        "summary": "Add user taste",
        "tags": [
          "Users"
        ]
      }
    },
    "/v1/users/{userId}/tastes/{tasteId}": {
      "delete": {
        "description": "Removes the taste vector from storage and Qdrant.",
        "operationId": "UserController_deleteTaste",
        "parameters": [
          {
            "name": "userId",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "tasteId",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Taste removed."
          },
          "404": {
            "description": "Taste or user not found."
          }
        },
        "summary": "Remove user taste",
        "tags": [
          "Users"
        ]
      }
    },
    "/v1/groups": {
      "post": {
        "description": "Registers a group referenced by an external identifier.",
        "operationId": "GroupController_create",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateGroupDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Group created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GroupResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid payload."
          }
        },
        "summary": "Create group",
        "tags": [
          "Groups"
        ]
      },
      "get": {
        "description": "Lists all groups.",
        "operationId": "GroupController_findAll",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Groups retrieved.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GroupResponseDto"
                  }
                }
              }
            }
          }
        },
        "summary": "List groups",
        "tags": [
          "Groups"
        ]
      }
    },
    "/v1/groups/{id}": {
      "get": {
        "description": "Retrieves a group.",
        "operationId": "GroupController_findOne",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Group found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GroupResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "Group not found."
          }
        },
        "summary": "Get group",
        "tags": [
          "Groups"
        ]
      },
      "patch": {
        "description": "Updates a group.",
        "operationId": "GroupController_update",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateGroupDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Group updated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GroupResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid payload."
          },
          "404": {
            "description": "Group not found."
          }
        },
        "summary": "Update group",
        "tags": [
          "Groups"
        ]
      },
      "delete": {
        "description": "Deletes a group.",
        "operationId": "GroupController_delete",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Group deleted."
          },
          "404": {
            "description": "Group not found."
          }
        },
        "summary": "Delete group",
        "tags": [
          "Groups"
        ]
      }
    },
    "/v1/health": {
      "get": {
        "operationId": "HealthController_check",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Health check successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthCheckResponseDto"
                }
              }
            }
          },
          "503": {
            "description": "Service unavailable - one or more dependencies are unhealthy"
          }
        },
        "summary": "Check health status of all dependencies",
        "tags": [
          "Health"
        ]
      }
    }
  },
  "info": {
    "title": "Fynd Core API",
    "description": "HTTP endpoints for the Fynd Core platform.",
    "version": "1.0.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "schemas": {
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Human readable name for the user."
          },
          "phone": {
            "type": "string",
            "description": "Primary phone number for the user."
          }
        },
        "required": [
          "name",
          "phone"
        ]
      },
      "UserResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "User identifier (UUID v8).",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "description": "Current user name."
          },
          "phone": {
            "type": "string",
            "description": "User phone number."
          },
          "createdAt": {
            "type": "string",
            "description": "Creation timestamp in ISO 8601."
          },
          "updatedAt": {
            "type": "string",
            "description": "Last update timestamp in ISO 8601."
          }
        },
        "required": [
          "id",
          "name",
          "phone",
          "createdAt",
          "updatedAt"
        ]
      },
      "UserTasteMatchDto": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/UserResponseDto"
          },
          "tasteId": {
            "type": "string",
            "format": "uuid",
            "description": "Identifier of the matched taste."
          },
          "matchedLabel": {
            "type": "string",
            "description": "Search label stored with the taste vector."
          },
          "matchedOriginalLabel": {
            "type": "string",
            "description": "Original label provided when the taste was stored."
          },
          "score": {
            "type": "number",
            "description": "Similarity score reported by Qdrant.",
            "minimum": 0,
            "maximum": 1
          }
        },
        "required": [
          "user",
          "tasteId",
          "matchedLabel",
          "score"
        ]
      },
      "UserTasteSearchResponseDto": {
        "type": "object",
        "properties": {
          "originalLabel": {
            "type": "string",
            "description": "Original input label after cleanup."
          },
          "searchLabel": {
            "type": "string",
            "description": "Search-friendly label used to generate embeddings."
          },
          "results": {
            "description": "Users ranked by similarity to the requested taste.",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserTasteMatchDto"
            }
          }
        },
        "required": [
          "originalLabel",
          "searchLabel",
          "results"
        ]
      },
      "UserTasteResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "label": {
            "type": "string"
          },
          "embeddingModel": {
            "type": "string",
            "description": "Embedding model used to vectorize this taste"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "userId",
          "label",
          "embeddingModel",
          "createdAt",
          "updatedAt"
        ]
      },
      "UpdateUserDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Updated name for the user."
          },
          "phone": {
            "type": "string",
            "description": "Updated phone number for the user."
          }
        }
      },
      "AddUserTasteDto": {
        "type": "object",
        "properties": {
          "taste": {
            "type": "string",
            "description": "Short description of the taste/preference to associate with the user",
            "example": "retro gaming coupons",
            "minLength": 2,
            "maxLength": 120
          }
        },
        "required": [
          "taste"
        ]
      },
      "CreateGroupDto": {
        "type": "object",
        "properties": {
          "externalId": {
            "type": "string",
            "description": "External identifier coming from upstream systems."
          },
          "description": {
            "type": "string",
            "description": "Human readable description of the group."
          }
        },
        "required": [
          "externalId",
          "description"
        ]
      },
      "GroupResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Group identifier (UUID v8).",
            "format": "uuid"
          },
          "externalId": {
            "type": "string",
            "description": "External identifier associated to the group."
          },
          "description": {
            "type": "string",
            "description": "Readable description of the group."
          },
          "createdAt": {
            "type": "string",
            "description": "Creation timestamp in ISO 8601."
          },
          "updatedAt": {
            "type": "string",
            "description": "Last update timestamp in ISO 8601."
          }
        },
        "required": [
          "id",
          "externalId",
          "description",
          "createdAt",
          "updatedAt"
        ]
      },
      "UpdateGroupDto": {
        "type": "object",
        "properties": {
          "externalId": {
            "type": "string",
            "description": "External identifier override."
          },
          "description": {
            "type": "string",
            "description": "Updated group description."
          }
        }
      },
      "HealthCheckResponseDto": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "up",
              "down",
              "degraded"
            ]
          },
          "timestamp": {
            "type": "string"
          },
          "dependencies": {
            "type": "object",
            "additionalProperties": {
              "type": "object"
            }
          },
          "uptime": {
            "type": "number"
          }
        },
        "required": [
          "status",
          "timestamp",
          "dependencies"
        ]
      }
    }
  }
}